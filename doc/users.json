{
    "apiVersion": "0.2", 
    "swaggerVersion": "1.1", 
    "resourcePath": "/users", 
    "apis": [
        {
            "path": "/users", 
            "description": "List Users", 
            "operations": [
                {
                    "httpMethod": "GET", 
                    "summary": "Get all users at your institutions", 
                    "notes": "Retrieves all users at your institution currently registered with ShelvAR. Set user id and authentication token in user context.", 
                    "responseClass": "string", 
                    "nickname": "users", 
                    "parameters": [], 
                    "errorResponses": [
                        {
                            "code": 400, 
                            "reason": "Invalid ID supplied"
                        }, 
                        {
                            "code": 404, 
                            "reason": "Data not found"
                        },
			{
			    "code": 403,
			    "reason": "Access denied. Authorization not provided."
			}	
                    ]
                },
				{
                    "httpMethod": "POST",
                    "summary": "Register a user with ShelvAR",
                    "notes": "Register a new user with ShelvAR. An email is sent to provided email address to confirm the registration. Authorization not required.",
                    "responseClass": "string",
                    "nickname": "register_user",
                    "parameters": [
                        {
                            "name": "user_id",
                            "description": "The user's username",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "name",
                            "description": "The user's name",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "password",
                            "description": "The user's password",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "inst_id",
                            "description": "The ID of the institution that the user wants to register with",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "email",
                            "description": "The email address of the user",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
						{
                            "name": "withhold_email",
                            "description": "Whether or not to send a confirmation email to the user. 0 to send confirmation, 1 to withhold confirmation",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "int"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        { 
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Invalid institution ID"
                        }
                    ]
                }
            ]
        },
		{
            "path": "/users/{user_id}/permissions",
            "description": "Get permissions for a user",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Retrieve permissions for a user. Set user id and authentication token in user context.",
                    "notes": "Retrieve permissions for a user",
                    "responseClass": "string",
                    "nickname": "permissions",
                    "parameters": [],
		    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        {
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Access denied. Authorization not provided."
                        }
                    ]
                },
				{
                    "httpMethod": "POST",
                    "summary": "Set permissions for a user. Set user id and authentication token in user context.",
                    "notes": "Set permissions for a user. Set user id and authentication token in user context.",
                    "responseClass": "string",
                    "nickname": "permissions",
                    "parameters": [
                        {
                            "name": "admin",
                            "description": "Value that determines whether the user is an administrator",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "post",
                            "description": "Value that determines whether the user has post permissions",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "get",
                            "description": "Value that determines whether the user has get permissions",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
		    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        {
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Access denied. Authorization not provided."
                        }
                    ]
                }
            ]
        },
        {
            "path": "/users/{user_id}.json",
            "description": "Get information about a registered ShelvAR user",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Get information about a registered ShelvAR user",
                    "notes": "Get information about a registered ShelvAR user. Returns a json object with the user_id, email and name. Authentication required.",
                    "responseClass": "string",
                    "nickname": "user_by_id",
                    "parameters": [ 
                    	{
                            "name": "user_id",
                            "description": "User ID of a registered ShelvAR user",
                            "paramType": "path",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        { 
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Invalid institution ID"
                        }
                    ]
                },
				 {
                    "httpMethod": "POST",
                    "summary": "Update information about a ShelvAR user",
                    "notes": "Sets standard information about any institution currently registered with ShelvAR. Requires authentication via OAuth, to an account that has \"admin\" permission.",
                    "responseClass": "string",
                    "nickname": "edit_user",
                    "parameters": [ 
                    	{
                            "name": "name",
                            "description": "The user's name",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "password",
                            "description": "The user's password",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "email",
                            "description": "The email address of the user",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        { 
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Invalid institution ID"
                        }
                    ]
                }
            ]
        },
		{
            "path": "/users/available/{user_id}.json",
            "description": "Determines if an user ID is available",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Determines if an user ID is available",
                    "notes": "Returns a json encoded object with the user_id field set to either TAKEN or AVAILABLE. No authentication required.",
                    "responseClass": "string",
                    "nickname": "user_id_available",
                    "parameters": [
                        {
                            "name": "user_id",
                            "description": "The user's username",
                            "paramType": "path",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        { 
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Invalid user ID"
                        }
                    ]
                }
            ]
        }
    ]
}
