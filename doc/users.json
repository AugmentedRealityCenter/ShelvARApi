{
    "apiVersion": "0.2",
    "swaggerVersion": "1.1",
    "resourcePath": "/users",
    "apis": [
		{
            "path": "/users/",
            "description": "Gets users registered with ShelvAR",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Registers an institution with ShelvAR",
                    "notes": "Registers an institution with ShelvAR.",
                    "responseClass": "string",
                    "nickname": "institutions",
                    "parameters": [
                        {
                            "name": "username",
                            "description": "A unique string that identifies you.",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "password",
                            "description": "6 - 32 character string that logs you into the system.",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"

                        },
                        {
                            "name": "institution_id",
                            "description": "The string that uniquely identifies the institution with which you wish to register.",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "email",
                            "description": "An email address that you will use for your ShelvAR account.",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ping"
                        }
                    ]
                },
                {
                    "httpMethod": "GET",
                    "summary": "Retrieve a list of all users at your institution",
                    "notes": "If authenticated, retrieve a list of information about all users registered with your institution.",
                    "responseClass": "string",
                    "nickname": "users",
                    "parameters": [],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid status value"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/institutions/{institution_id}.json",
            "description": "Get information about a specific institution",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Get public information about a specific insititution. If authorized, get detailed information about your institution.",
                    "notes": "Get public information about a specific insititution. If authorized, get detailed information about your institution.",
                    "responseClass": "string",
                    "nickname": "institution_info",
                    "parameters": [
                        {
                            "name": "institution_id",
                            "description": "The unique identifier for your institution",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid institution ID"
                        }
                    ]
                }
            ]
        }
    ]
}
