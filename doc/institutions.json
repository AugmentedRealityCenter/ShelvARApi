{
    "apiVersion": "0.2",
    "swaggerVersion": "1.1",
    "resourcePath": "/institutions",
    "apis": [
		{
            "path": "/institutions/",
            "description": "List of book pings",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Registers an institution with ShelvAR",
                    "notes": "Registers an institution with ShelvAR.",
                    "responseClass": "string",
                    "nickname": "institutions",
                    "parameters": [
                        {
                            "name": "institution_id",
                            "description": "The official name of the institution",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
						{
                            "name": "admin_email",
                            "description": "The email address of the user who will be the administrator of the account.",
                            "paramType": "path",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
						{
                            "name": "alt_contact",
                            "description": "The name of another person at the institution that should be contacted if the admin contact is unavailable.",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "institution_type",
                            "description": "The enumerated type of your institution. TODO: docuemnt these.",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "short_code",
                            "description": "2 - 10 character string that represents your institution.",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
		    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        {
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Access denied. Authorization not provided."
                        }
                    ]
                },
                {
                    "httpMethod": "GET",
                    "summary": "Get information about all registered institutions",
                    "notes": "Retrieve a list of all registered institutions with basic information about each one.",
                    "responseClass": "string",
                    "nickname": "institutions",
                    "parameters": [],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid status value"
                        }
                    ]
                }
            ]
        },
	{
            "path": "/institutions/{institution_id}.json",
            "description": "Institution Information",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Get information about an institution",
                    "notes": "Retrieves standard information about any institution currently registered with ShelvAR. Set user id and authentication token in user context.",
                    "responseClass": "string",
                    "nickname": "institution",
                    "parameters": [
                        {
                            "name": "institution_id",
                            "description": "The shortname for your institution.",
                            "paramType": "path",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Invalid ID supplied"
                        },
                        { 
                            "code": 404,
                            "reason": "Data not found"
                        },
                        {
                            "code": 403,
                            "reason": "Access denied. Authorization not provided."
                        }
                    ]
                }
            ]
        }
    ]
}
